<%= link_to "Back to Home", "/", class: "home-id" %>
<div class="container">
  <h1> SignUp with your username and password </h1>
  <form class="needs-validation" novalidate action="create" id="signup" method="post" autocomplete="off">
    <input type="hidden" name="user_type" value="normal">
    <div class="form-row">
    <div class="col-md-4 mb-3">
      <label for="validationCustom01">Email</label>
      <input type="text" class="form-control" id="validationCustom01" name="username" placeholder="Email" required>
      <div class="invalid-feedback">
        Please choose a username.
      </div>
    </div>
    <div class="col-md-4 mb-3">
      <label for="validationCustom02">Password</label>
      <input type="password" class="form-control" id="validationCustom02" name="password" placeholder="Password" required>
      <div class="invalid-feedback">
        Please choose a password.
      </div>
    </div>
  </div>
  <button class="btn btn-primary" type="submit">Sign Up</button>
  </form>
  <% if flash[:error] %>
  <div class="alert alert-warning">
    <%= flash[:error] %>
    </div>
  <% end %>
</div>
